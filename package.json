{
  "name": "nimiq-mcp",
  "type": "module",
  "version": "1.0.0",
  "private": true,
  "description": "MCP server for Nimiq blockchain interactions",
  "scripts": {
    "build": "pnpm -r build",
    "dev:web-client": "pnpm --filter nimiq-mcp-web-client dev",
    "dev:blockchain": "pnpm --filter nimiq-mcp-blockchain dev",
    "build:worker": "vite build && wrangler deploy --dry-run",
    "dev:worker": "wrangler dev",
    "deploy": "wrangler deploy",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "typecheck": "pnpm -r typecheck"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^4.19.0",
    "@types/node": "^24.9.2",
    "@typescript-eslint/eslint-plugin": "^8.46.2",
    "@typescript-eslint/parser": "^8.46.2",
    "bumpp": "^10.3.1",
    "eslint": "^9.38.0",
    "eslint-plugin-format": "^1.0.2",
    "lint-staged": "^16.2.6",
    "simple-git-hooks": "^2.13.0",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3",
    "vite": "^7.1.12",
    "vitest": "^2.1.5",
    "wrangler": "^4.45.1"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "esbuild",
      "simple-git-hooks"
    ]
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm lint-staged"
  },
  "lint-staged": {
    "*": "eslint --fix"
  }
}
